{
  "name": "pulsar-mcp",
  "main": "./lib/main",
  "version": "0.3.0",
  "description": "MCP (Model Context Protocol) server",
  "keywords": [
    "mcp",
    "pulsar",
    "editor",
    "tools"
  ],
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "repository": "https://github.com/asiloisad/pulsar-pulsar-mcp",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "providedServices": {
    "pulsar-mcp": {
      "versions": {
        "1.0.0": "provideService"
      }
    }
  },
  "consumedServices": {
    "mcp-tools": {
      "versions": {
        "^1.0.0": "consumeMcpTools"
      }
    }
  },
  "configSchema": {
    "autoStart": {
      "title": "Auto Start",
      "description": "Automatically start the MCP bridge server when Pulsar opens",
      "type": "boolean",
      "default": true,
      "order": 0
    },
    "bridgePort": {
      "title": "Bridge Base Port",
      "description": "Base port for MCP bridge. Auto-increments for multiple windows (e.g., 3000, 3001, 3002)",
      "type": "integer",
      "default": 3000,
      "minimum": 1024,
      "maximum": 65535,
      "order": 1
    },
    "disabledTools": {
      "title": "Disabled Tools",
      "description": "List of disabled MCP tool names (managed via toggle-tools command)",
      "type": "array",
      "default": [
        "CloseFile",
        "RemoveProjectPath"
      ],
      "items": {
        "type": "string"
      },
      "order": 98
    },
    "debugMode": {
      "title": "Debug Mode",
      "description": "Enable debug logging to console for troubleshooting",
      "type": "boolean",
      "default": false,
      "order": 99
    }
  },
  "dependencies": {
    "pulsar-select-list": "^1.4.1"
  }
}
